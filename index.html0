     }
      .container1{
        border-bottom: 1px solid black;
        margin-bottom: 20px;
      }
     
      .flex {
            display: flex;
             align-items: center;
            flex-direction: column;
            gap: 1.5rem;
            background: rgba(76, 68, 68, 0.486);
            padding: 50px;
            border-bottom: solid 1px #333;

        }
        .flex h1{
            color: #110f0b;
            font-size: 20px;
            margin-top: -30px;
        }
        .add {
            text-decoration: none;
            display: inline-block;
            width: 60px;
            height: 30px;
            border-radius: 2px;
            background: #a20505;
            color: white;
            font-size: 12px;
            font-weight: 600;
